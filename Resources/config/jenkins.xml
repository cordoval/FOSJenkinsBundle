<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jenkins.data_collector.class">FOS\Bundle\JenkinsBundle\DataCollector\JenkinsDataCollector</parameter>
        <parameter key="jenkins.logger.build_history_class">FOS\Bundle\JenkinsBundle\BuildAnalysis\BuildHistory</parameter>
    </parameters>

    <services>

        <service id="data_collector.jenkins" class="%jenkins.data_collector.class%" public="false">
            <tag name="data_collector" template="FOSJenkinsBundle:Collector:jenkins" id="jenkins" />
            <argument type="service" id="jenkins.logger.build_history" />
            <argument>%jenkins.endpoint%</argument>
        </service>

        <service id="jenkins.logger.build_history" class="%jenkins.logger.build_history_class%" public="false">
            <argument type="service" id="jenkins.rss.builds.parser"/>
        </service>

        <service id="jenkins.rss.builds.parser" class="SimpleXmlElement" public="false">
            <argument>%jenkins.builds.summary.rss_uri%</argument>
            <argument>0</argument>
            <argument>true</argument>
        </service>
    </services>
</container>
