<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jenkins.data_collector.class">FOS\Bundle\JenkinsBundle\DataCollector\JenkinsDataCollector</parameter>
        <parameter key="jenkins.parser.job_data_parser_class">FOS\Bundle\JenkinsBundle\Parser\JobDataParser</parameter>
        <parameter key="jenkins.parser.job_test_suite_parser_class">FOS\Bundle\JenkinsBundle\Parser\JobTestSuiteParser</parameter>
    </parameters>

    <services>

        <!-- Jenkins Data Collector -->
        <service id="data_collector.jenkins" class="%jenkins.data_collector.class%" public="false">
            <tag name="data_collector" template="FOSJenkinsBundle:Collector:jenkins" id="jenkins" />
            <argument>%jenkins.endpoint%</argument>
            <call method="setJobDataParser">
                <argument type="service" id="jenkins.parser.job_data_parser" />
            </call>
            <call method="setJobTestSuiteParser">
                <argument type="service" id="jenkins.parser.job_test_suite_parser" />
            </call>
        </service>

        <!-- Jenkins Report Parsers -->
        <service id="jenkins.parser.job_data_parser" class="%jenkins.parser.job_data_parser_class%" public="false">
            <call method="setPath">
                <argument type="string">%jenkins.endpoint%/api/json</argument>
            </call>
        </service>

        <service id="jenkins.parser.job_test_suite_parser" class="%jenkins.parser.job_test_suite_parser_class%" public="false">
            <call method="setPath">
                <argument type="string">%jenkins.endpoint%/lastBuild/api/json</argument>
            </call>
        </service>
    </services>
</container>
